<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_card_view"
    android:paddingBottom="1dp"
    card_view:cardCornerRadius="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/location_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/location_photo"
            android:text="Ragnars Restaurant"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/location_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_name"
            android:layout_toRightOf="@+id/location_photo"
            android:text="Restaurant" />

        <TextView
            android:id="@+id/location_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_name"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/location_type"
            android:width="20dp"
            android:text="â€¢"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/location_kitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_name"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/location_dot"
            android:text="Indisk"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/location_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_type"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/location_address"
            android:width="20dp"
            android:text="|"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/location_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="34dp"
            android:layout_below="@+id/location_name"
            android:text="Closed"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/location_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_type"
            android:layout_toRightOf="@+id/location_photo"
            android:text="Ragnarveien 8"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/location_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_type"
            android:layout_toRightOf="@+id/location_separator"
            android:layout_marginLeft="2dp"
            android:text="12345678"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/location_opening_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/location_open"
            android:text="09:00 - 23:00"
            android:layout_marginRight="4dp"
            android:textSize="15sp"
            android:visibility="visible" />

        <View
            android:id="@+id/location_separator_line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/location_opening_hours"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
